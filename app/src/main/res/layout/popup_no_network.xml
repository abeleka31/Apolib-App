<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_popup_rounded"
    android:padding="24dp"
    android:alpha="0.9"
    android:gravity="center_horizontal">

    <TextView
        android:id="@+id/tv_popup_title_no_network"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tidak Ada Jaringan"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="?android:attr/textColorPrimary"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/tv_popup_message_no_network"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pastikan Anda terhubung ke internet untuk melanjutkan."
        android:textSize="16sp"
        android:textColor="@color/text_color"
        android:gravity="center"
        android:layout_marginBottom="24dp"/>

    <Button
        android:id="@+id/btn_ok_no_network"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Oke"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:stateListAnimator="@null"
        android:background="@android:color/transparent"
        android:backgroundTint="?attr/colorPrimary"
        android:textColor="@color/blue"/>

</LinearLayout>